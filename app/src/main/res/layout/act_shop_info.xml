<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/zhu_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/zhu_color"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/address_img"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_below="@+id/order_id"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/address_img" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/address_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/address_img"
            android:orientation="vertical">


            <TextView
                android:id="@+id/take_goods_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                android:textColor="#666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="联系方式："
                android:textColor="#666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/take_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="收货店名："
                android:textColor="#666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/take_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="收货地址："
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="门店编号："
                android:textColor="#666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="门店状态："
                android:textColor="#666666"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>